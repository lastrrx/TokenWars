{
  "name": "solana-token-betting",
  "version": "1.0.0",
  "description": "Solana Token Betting Platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "admin"
  ],
  "scripts": {
    "install-all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend && npm run build:contracts",
    "build:frontend": "cd frontend && npm run build",
    "build:contracts": "cd smart-contracts && anchor build",
    "test": "npm run test:frontend && npm run test:backend && npm run test:contracts",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:contracts": "cd smart-contracts && anchor test",
    "db:setup": "psql -f database/schema.sql",
    "db:admin": "psql -f database/admin-setup.sql",
    "db:seed": "psql -f database/test-data.sql"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
