# =====================================================
# SOLANA CONFIGURATION
# =====================================================
SOLANA_NETWORK=devnet
# Options: devnet, testnet, mainnet-beta

SOLANA_RPC_URL=https://api.devnet.solana.com
# For mainnet: https://api.mainnet-beta.solana.com

# Platform wallet for collecting fees (your wallet address)
PLATFORM_WALLET_ADDRESS=YOUR_PLATFORM_WALLET_ADDRESS_HERE

# Program ID (will be generated when you deploy the smart contract)
PROGRAM_ID=YOUR_PROGRAM_ID_HERE

# =====================================================
# PRICE API CONFIGURATION
# =====================================================
# Helius API (Primary price source)
HELIUS_API_KEY=your_helius_api_key_here

# Alchemy API (Backup price source)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# CoinGecko API (Market data)
COINGECKO_API_KEY=your_coingecko_api_key_here

# Jupiter API (no key required)
JUPITER_API_URL=https://price.jup.ag/v4

# =====================================================
# SERVER CONFIGURATION
# =====================================================
NODE_ENV=development
PORT=3000

# Server security
JWT_SECRET=your_very_secure_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# ADMIN CONFIGURATION
# =====================================================
# Initial admin wallet address
INITIAL_ADMIN_WALLET=YOUR_WALLET_ADDRESS_HERE

# Admin panel security
ADMIN_SESSION_DURATION_HOURS=24
ADMIN_MAX_LOGIN_ATTEMPTS=5

# =====================================================
# PLATFORM SETTINGS
# =====================================================
# Competition settings
DEFAULT_BET_AMOUNT=0.1
PLATFORM_FEE_PERCENTAGE=15.0
COMPETITION_DURATION_HOURS=24
VOTING_DURATION_HOURS=1

# Token filtering
MIN_MARKET_CAP=5000000
MAX_MARKET_CAP=100000000
MARKET_CAP_TOLERANCE=10.0
MIN_TOKEN_AGE_DAYS=30
MIN_DAILY_VOLUME=100000

# =====================================================
# FRONTEND CONFIGURATION
# =====================================================
# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Admin panel URL
ADMIN_URL=http://localhost:3000/admin

# =====================================================
# EMAIL CONFIGURATION (Optional)
# =====================================================
# For notifications and alerts
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# =====================================================
# MONITORING AND LOGGING
# =====================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable detailed logging
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# =====================================================
# DEVELOPMENT SETTINGS
# =====================================================
# Enable development features
ENABLE_DEBUG_MODE=true
ENABLE_MOCK_PRICES=false
ENABLE_TEST_COMPETITIONS=true

# Webhook URLs for testing
WEBHOOK_URL=http://localhost:3000/webhooks

# =====================================================
# SECURITY SETTINGS
# =====================================================
# CORS settings
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Security headers
HELMET_ENABLED=true

# Database connection pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# =====================================================
# BACKUP AND RECOVERY
# =====================================================
# Backup settings
ENABLE_AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=30

# Recovery settings
ENABLE_DISASTER_RECOVERY=true
